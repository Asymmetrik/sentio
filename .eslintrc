{
	"parserOptions": {
		"sourceType": "module"
	},

	"env": {
		"es6": true,
		"browser": true
	},

	"extends": "eslint:recommended",

	"rules": {
		"no-unused-vars": [ "error", { "args": "none" } ]
	},

	"globals": {
		"console": true,
		"window": true,

		"d3": true,
		"sentio": true,


		"after": true,
		"afterEach": true,
		"before": true,
		"beforeEach": true,
		"context": true,
		"describe": true,
		"it": true,
		"should": true
	}
}
